<main>
  <%= flash[:notice] %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/info' %>
        </div>
        <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to image_tag(@book_show.user.get_profile_image(100,100)), user_path(@book_show.user.id)%>
                <br>
                <%= link_to @book_show.user.name,user_path(@book_show.user.id) %>
              </td>
              <td>
                <%= link_to @book_show.title,book_path(@book_show.id) %>
              </td>
              <td>
                <%= @book_show.body %>
              </td>
              <% if @book_show.user==current_user %>
                <td>
                  <%= link_to "Edit",edit_book_path(@book_show.id),class:"btn btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(@book_show.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
</main>